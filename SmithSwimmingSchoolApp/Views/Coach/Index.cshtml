@model IEnumerable<SmithSwimmingSchoolApp.Models.Course>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background: url('/images/FondoPiscina.webp') no-repeat center center fixed;
        background-size: cover;
        font-family: Arial, sans-serif;
    }
</style>

<div class="content-container">
    <h1 class="text-center my-4">Mis Cursos</h1>

    <table class="table table-striped table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    Entrenador
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Places)
                </th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => course.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Coach!.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => course.Places)
                    </td>
                    <td class="text-center">
                        @if (User.IsInRole("Coach"))
                        {
                            <a asp-controller="Course" asp-action="CourseDetails" asp-route-id="@course.CourseId" class="btn btn-warning btn-sm">Detalles</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

